{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    // "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.spec.ts",
    "test/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}